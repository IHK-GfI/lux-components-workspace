{
  "name": "@ihk-gfi/lux-components-update",
  "version": "19.5.0",
  "description": "Schematics f√ºr die Aktualisierung von LUX-Applikationen",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json",
    "clean": "del-cli --force ../../dist/updater/",
    "pack-copy-base-files": "node ./scripts/copy-base-files.js",
    "pack-copy-template-dirs": "node ./scripts/copy-template-dirs.js",
    "pack": "npm run build && npm run pack-copy-base-files && npm run pack-copy-template-dirs",
    "security": "npm audit --registry=https://registry.npmjs.org --audit-level high",
    "smoketest": "npm run test && npm run pack",
    "test": "npm run pack && tsc -p tsconfig.spec.json && jasmine ../../dist/updater/**/*.spec.js"
  },
  "keywords": [
    "schematics",
    "lux-components",
    "jast"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/IHK-GfI/lux-components-workspace"
  },
  "workspaces": [
    "./projects/*",
    "./dist/*"
  ],
  "license": "IHK-GfI Open-Source-Lizenz",
  "schematics": "./collection.json",
  "dependencies": {
    "chalk": "^4.1.2",
    "cheerio": "1.0.0-rc.12",
    "htmlparser2": "^9.1.0",
    "jsdom": "^28.0.0",
    "jsonc-parser": "^3.2.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.11.9",
    "@types/semver": "^7.5.8"
  }
}
