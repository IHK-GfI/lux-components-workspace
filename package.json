{
  "name": "@ihk-gfi/lux-components-workspace",
  "version": "19.5.0",
  "license": "IHK-GfI Open-Source-Lizenz",
  "engines": {
    "node": ">=20.19.0 <25.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "smoketest": "npm run pack:all && npm run test:all",
    "pack:demo": "ng build demo-app",
    "pack:components": "ng build lux-components-lib",
    "pack:theme": "npm run pack --workspace=projects/lux-components-theme",
    "pack:updater": "npm run pack --workspace=projects/lux-components-update",
    "pack:all": "npm run util:delete-dist && npm run pack:theme && npm run pack:components && npm run pack:updater && npm run pack:demo",
    "start:demo": "npm run util:check-demo-conditions && npm run start",
    "start:dev": "npm run util:delete-dist && run-p watch:components watch:theme util:wait-and-start-demo",
    "tar:components": "npm run pack:components && cd dist/lux-components-lib && npm pack && cd ../..",
    "tar:theme": "npm run pack:theme && cd dist/theme && npm pack && cd ../..",
    "tar:updater": "npm run pack:updater && cd dist/updater && npm pack && cd ../..",
    "tar:all": "npm run util:delete-dist && npm run tar:theme && npm run tar:components && npm run tar:updater",
    "test:all": "npm run test:components && npm run test:demo && npm run test:theme && npm run test:updater",
    "test:components": "ng lint lux-components-lib && ng test lux-components-lib --watch=false --browsers=ChromeHeadless --code-coverage=true",
    "test:demo": "ng lint demo-app",
    "test-browser:components": "ng test lux-components-lib",
    "test:theme": "npm run smoketest --workspace=projects/lux-components-theme",
    "test:updater": "npm run smoketest --workspace=projects/lux-components-update",
    "util:check-demo-conditions": "node scripts/check-demo-conditions.js",
    "util:move-files": "node scripts/move-files.js",
    "util:clean-all": "npm run util:delete-dist && del-cli --force .angular && del-cli --force package-lock.json && del-cli --force node_modules",
    "util:delete-dist": "del-cli --force dist/",
    "util:wait-and-start-demo": "wait-on dist/lux-components-lib/types/ihk-gfi-lux-components.d.ts dist/theme/prebuilt-themes/luxtheme-authentic.css && npm run start",
    "watch:components": "npm run watch lux-components-lib",
    "watch:theme": "npm run watch --workspace=projects/lux-components-theme",
    "prepare": "husky"
  },
  "workspaces": [
    "projects/*"
  ],
  "private": false,
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/material": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@ihk-gfi/lux-components-icons-and-fonts": "1.10.0",
    "@ihk-gfi/lux-components-theme": "19.0.0-rc.1",
    "@jsverse/transloco": "^8.0.2",
    "dompurify": "~3.2.6",
    "marked": "15.0.12",
    "ngx-cookie-service": "^21.1.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "uuid": "11.1.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/core": "^21.1.2",
    "@angular-devkit/schematics": "^21.1.2",
    "@angular-devkit/schematics-cli": "^21.1.2",
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@chiragrupani/karma-chromium-edge-launcher": "^2.4.1",
    "@types/jasmine": "~5.1.8",
    "@types/uuid": "^10.0.0",
    "angular-eslint": "21.2.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.29.0",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jasmine": "~5.8.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-firefox-launcher": "2.1.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-viewport": "1.0.9",
    "ng-packagr": "^21.1.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "prettier": "3.8.1",
    "replace": "^1.2.2",
    "sass": "1.89.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.0.0",
    "wait-on": "^8.0.3"
  }
}
